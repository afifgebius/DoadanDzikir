<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.doadandzikir">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_doa"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_doa"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoadanDzikir">
        <activity
            android:name=".DetailArtikelActivity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".DzikirPetangActivity"
            android:exported="true"
            android:theme="@style/PetangActivity"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".DzikirPagiActivity"
            android:exported="true"
            android:theme="@style/PagiActivity"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".PagiPetangDzikirActivity"
            android:exported="true" />
        <activity
            android:name=".HarianDzikirDoaActivity"
            android:exported="true" />
        <activity
            android:name=".Setiap_Saat_Dzikir_Activity"
            android:exported="true"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".Qauliyah_Shalat_Activity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name=".Splash.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>